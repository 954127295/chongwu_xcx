<view class="container"> 
 <view class="login-icon"> 
 <image class="login-img" src="https://wx.i-jiashi.com/attachs/weixin/loginLog.png"></image> 
 </view> 
 <view class="login-from"> 
 <view class="inputView"> 
  <image class="nameImage" src="https://wx.i-jiashi.com/attachs/weixin/name.png"></image> 
  <label class="loginLab">设备号</label> 
  <input class="inputText" value="{{iem}}" placeholder="请输设备号" bindinput="iemInput" /> 
 </view> 
 <view class="line"></view> 
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">确认绑定</button> 
 </view> 
 </view> 
</view>